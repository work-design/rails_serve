<tr id="tr_<%= rule.identifier %>" data-controller="tree_remote" data-tree_remote-target="item">
  <td>
    <span style="width: 4.29em; display: inline-block"></span>
    <% if @role.has_role?(business: rule.business_identifier, namespace: rule.namespace_identifier, controller: rule.controller_path, action: rule.action_name) %>
      <%= button_to({ action: 'rule_off' }, params: { rule_id: rule.id }, method: :patch) do %>
        <i class="far fa-check-square fa-lg"></i>
      <% end %>
    <% else %>
      <%= button_to({ action: 'rule_on' }, params: { rule_id: rule.id }, method: :patch) do %>
        <i class="far fa-square fa-lg"></i>
      <% end %>
    <% end %>
    <span><%= rule.name %></span>
  </td>
</tr>
