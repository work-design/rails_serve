<tr id="tr_<%= meta_controller.identifier %>" data-controller="tree-remote" data-tree-remote-target="item" data-tree-remote-hide-value="<%= defined?(hide) && hide ? true : false %>">
  <td>
    <span style="width: 2.86em; display: inline-block"></span>
    <%= button_to({ action: 'actions' }, params: { meta_controller_id: meta_controller.id }) do %>
      <% if defined?(expand) && expand %>
        <i class="fas fa-fw fa-caret-down" style="cursor: pointer" data-action="click->tree-remote#collapse"></i>
      <% else %>
        <i class="fas fa-fw fa-caret-right" style="cursor: pointer" data-action="click->tree-remote#expand"></i>
      <% end %>
    <% end %>
    <% if @role.has_role?(business: meta_controller.business_identifier, namespace: meta_controller.namespace_identifier, controller: meta_controller.controller_path) %>
      <%= button_to({ action: 'meta_controller_off' }, params: { meta_controller_id: meta_controller.id, expand: defined?(expand) && expand }, method: :patch, form: { data: { tree_remote_target: 'checkbox' } }) do %>
        <i class="far fa-check-square fa-lg"></i>
      <% end %>
    <% else %>
      <%= button_to({ action: 'meta_controller_on' }, params: { meta_controller_id: meta_controller.id, expand: defined?(expand) && expand }, method: :patch, form: { data: { tree_remote_target: 'checkbox' } }) do %>
        <i class="far fa-square fa-lg"></i>
      <% end %>
    <% end %>
    <span><%= meta_controller.name %></span>
    <span class="has-text-grey">(<%= meta_controller.controller_path %>)</span>
  </td>
</tr>
