<% tr_id = "tr_#{params[:business_identifier]}_#{params[:namespace_identifier].blank? ? '_' : params[:namespace_identifier]}" %>

<%= turbo_stream.replace tr_id, partial: 'show_namespace', locals: { meta_namespace: @meta_namespace, expand: true } %>
<% if params[:expand].present? %>
  <% @meta_controllers.each do |meta_controller| %>
    <%= turbo_stream.replace "tr_#{meta_controller.identifier}", partial: 'show_controller', locals: { meta_controller: meta_controller, hide: true } %>
  <% end %>
<% else %>
  <%= turbo_stream.after tr_id, partial: 'show_controller', collection: @meta_controllers, as: :meta_controller %>
<% end %>
